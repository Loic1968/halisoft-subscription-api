# ═══════════════════════════════════════════════════════════════
# HaliSoft Subscription System - Environment Configuration
# ═══════════════════════════════════════════════════════════════

# Application
NODE_ENV=development
APP_URL=http://localhost:3000
API_PORT=3001
FRONTEND_URL=http://localhost:3000

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/halisoft_dev?schema=public

# PayPal Configuration
# Get these from: https://developer.paypal.com/dashboard/applications
PAYPAL_MODE=sandbox
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret
PAYPAL_PRODUCT_ID=your_paypal_product_id
PAYPAL_WEBHOOK_ID=your_paypal_webhook_id
PAYPAL_API_URL=https://api-m.sandbox.paypal.com

# Anthropic Claude API
# Get from: https://console.anthropic.com/settings/keys
ANTHROPIC_API_KEY=sk-ant-xxxxx
ANTHROPIC_MAX_TOKENS_DEFAULT=4000
ANTHROPIC_MODEL=claude-sonnet-4-5-20250929

# Authentication & Security
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRY=7d
SESSION_SECRET=your_session_secret_change_this
BCRYPT_ROUNDS=10

# Email Configuration (Nodemailer)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=noreply@halisoft.com
SMTP_PASSWORD=your_smtp_password
EMAIL_FROM=HaliSoft <noreply@halisoft.com>

# Redis (for caching and rate limiting)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# Monitoring & Logging
LOG_LEVEL=info
SENTRY_DSN=
SENTRY_ENVIRONMENT=development

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Cron Jobs
ENABLE_CRON_JOBS=true
QUOTA_RESET_CRON=0 0 * * *
QUOTA_WARNING_CRON=0 */6 * * *

# Admin Configuration
ADMIN_EMAIL=admin@halisoft.com
ADMIN_INITIAL_PASSWORD=change_me_on_first_login

# Feature Flags
ENABLE_MULTI_TENANT=true
ENABLE_WHITE_LABEL=true
ENABLE_SSO=false
ENABLE_WEBHOOK_RETRY=true

# File Upload (if needed)
MAX_FILE_SIZE_MB=10
UPLOAD_DIR=/tmp/uploads

# Deployment (Vercel/Railway specific)
# These are auto-populated on deployment platforms
# DATABASE_URL will be provided by Railway/Vercel
# REDIS_URL will be provided if using managed Redis
